<!DOCTYPE html>
<html class="fixed inset-0">
	<head>
		<script>
			try {
				if (!('theme' in localStorage)) {
					localStorage.theme = window.matchMedia('(prefers-color-scheme:dark)')
						.matches
						? 'dark'
						: 'light';
				}
				if (localStorage.theme === 'dark') {
					document.documentElement.classList.add('dark');
				}
			} catch {}
		</script>
		<script>
			try {
				if (!('layout' in localStorage)) {
					localStorage.layout = 'horizontal';
				}
				if (localStorage.layout === 'vertical') {
					document.documentElement.classList.add('is-vertical');
				}
			} catch {}
		</script>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>UI Playground</title>
		<meta name="description" content="Quickly create and share proof of concepts built with @studiometa/ui and @studiometa/js-toolkit.">
	</head>
	<body class="fixed inset-0 group dark:bg-zinc-900 dark:text-white">
		<main class="fixed top-0 left-0 w-full h-full">
			<div class="z-10 absolute top-0 flex items-center gap-8 w-full p-4 leading-4 bg-zinc-100 dark:bg-zinc-800 text-sm dark:text-zinc-100 dark:border-b-zinc-700">
				<span class="font-bold">UI Playground</span>

				<div class="flex items-center gap-4">
					{% include '@components/Checkbox.twig' with {
						label: 'HTML',
						attr: {
							for: 'html-editor',
						},
						input_attr: {
							data_ref: 'htmlVisibility',
							name: 'html-editor',
							id: 'html-editor',
							checked: true,
						}
					} %}
					{% include '@components/Checkbox.twig' with {
						label: 'JS',
						attr: {
							for: 'script-editor',
						},
						input_attr: {
							data_ref: 'scriptVisibility',
							name: 'script-editor',
							id: 'script-editor',
							checked: true,
						}
					} %}
				</div>

				<div data-component="LayoutSwitcher" class="flex items-center gap-4">
					Layout
					{% include '@components/RadioGroup.twig' with {
						items: [
							{
								label: 'Horizontal',
								attr: {
									for: 'layout-horizontal',
								},
								input_attr: {
									data_ref: 'inputs[]',
									name: 'layout',
									id: 'layout-horizontal',
									value: 'horizontal',
								}
							},
							{
								label: 'Vertical',
								attr: {
									for: 'layout-vertical',
								},
								input_attr: {
									data_ref: 'inputs[]',
									name: 'layout',
									id: 'layout-vertical',
									value: 'vertical',
								}
							}
						],
					} %}
				</div>

				<div data-component="ThemeSwitcher" class="flex gap-4">
					Theme
					{% include '@components/RadioGroup.twig' with {
						items: [
							{
								label: 'Light',
								attr: {
									for: 'theme-light',
								},
								input_attr: {
									data_ref: 'inputs[]',
									name: 'theme',
									id: 'theme-light',
									value: 'light',
								}
							},
							{
								label: 'Dark',
								attr: {
									for: 'theme-dark',
								},
								input_attr: {
									data_ref: 'inputs[]',
									name: 'theme',
									id: 'theme-dark',
									value: 'dark',
								}
							}
						],
					} %}
				</div>
			</div>
			<div data-component="LayoutReactive"
				data-option-horizontal="flex-col"
				class="absolute top-12 left-0 right-0 bottom-0 flex flex-col">
				<div data-component="LayoutReactive"
					data-option-vertical="h-full border-r dark:border-r-zinc-700"
					data-option-horizontal="w-full border-b dark:border-b-zinc-700"
					class="flex flex-col w-full border-b dark:border-b-zinc-700">
					<div data-component="LayoutReactive"
						data-option-vertical="flex-col flex-wrap"
						class="flex flex-grow items-stretch h-full">
						<div
							data-component="HtmlEditor LayoutReactive"
							data-option-vertical="w-[40vw] h-1/2"
							data-option-horizontal="w-1/2 h-[33vh]"
							class="relative flex-grow w-1/2 h-[33vh]"
							data-lang="text/html"
						>
							<div class="absolute inset-0 bg-zinc-50 dark:bg-neutral-900"></div>
						</div>
						<div
							data-component="ScriptEditor LayoutReactive"
							data-option-vertical="w-[40vw] h-1/2"
							data-option-horizontal="w-1/2 h-[33vh]"
							class="relative flex-grow w-1/2 h-[33vh] dark:border-l-zinc-700"
							data-lang="text/javascript"
						>
							<div class="absolute inset-0 bg-zinc-50 dark:bg-neutral-900"></div>
						</div>
					</div>
				</div>
				<div data-component="LayoutReactive"
					class="relative w-full flex-grow bg-white"
					data-option-vertical="w-3/5"
					data-option-horizontal="w-full">
					<iframe
						data-component="Iframe"
						src="about:blank"
						srcdoc=""
						frameborder="0"
						class="absolute inset-0 w-full h-full"
					></iframe>
				</div>
			</div>
		</main>
	</body>
</html>
